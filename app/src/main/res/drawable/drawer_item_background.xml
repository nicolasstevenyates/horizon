<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@android:color/transparent">

            <item android:id="@android:id/mask" android:end="8dp" android:start="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <item android:end="8dp" android:start="8dp">
                <shape>
                    <solid android:color="@color/colorPrimaryTransparent" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_checked="false">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorPrimaryTransparent">

            <item android:id="@android:id/mask" android:end="8dp" android:start="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <item android:end="8dp" android:start="8dp">
                <shape>
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>